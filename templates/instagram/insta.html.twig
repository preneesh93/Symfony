                        <div class="col-sm">
                              <iframe src="https://www.instagram.com/p/BkUpU5tFtAM/embed" width="240" height="300" frameborder="0" scrolling="no" allowtransparency="true"></iframe>
                        </div>
                  </div>
            </div>
      </div>
      <hr>
      </div>
{% endblock %}

{% block javascripts %}
<script async defer src="//www.instagram.com/embed.js"></script>
<script src="/js/insta.js"></script>
{% endblock %}
